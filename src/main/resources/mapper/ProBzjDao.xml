<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuesheng.pm.mapper.ProBzjMapper">

    <resultMap type="com.yuesheng.pm.entity.ProBzj" id="ProBzjMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="money" column="money" jdbcType="NUMERIC"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="datetime" column="datetime" jdbcType="VARCHAR"/>
        <result property="proDetailId" column="pro_id" jdbcType="VARCHAR"/>
        <result property="proDetailId" column="pro_id" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProBzjMap">
        select
          id, money, remark, datetime,pro_id,type
        from pro_bzj
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProBzjMap">
        select
          id, money, remark, datetime,pro_id,type
        from pro_bzj
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProBzjMap">
        select
        id, money, remark, datetime,pro_id,type
        from pro_bzj
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="money != null">
                and money = #{money}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
            <if test="datetime != null and datetime != ''">
                and datetime = #{datetime}
            </if>
            <if test="proDetailId != null and proDetailId != ''">
                and pro_id = #{proDetailId}
            </if>
        </where>
        order by datetime desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pro_bzj(money, remark, datetime,pro_id,type)
        values (#{money}, #{remark}, #{datetime},#{proDetailId},#{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update pro_bzj
        <set>
            <if test="money != null">
                money = #{money},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="datetime != null and datetime != ''">
                datetime = #{datetime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pro_bzj where id = #{id}
    </delete>

</mapper>